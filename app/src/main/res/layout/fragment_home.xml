<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teuch.pentateuchapp.fragment.HomeFragment">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#011424">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:orientation="vertical"
                android:weightSum="1">





                >

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/ImageView"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pentateuchlogo1"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Pentateuch Technologies"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    />


                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="&quot;Your passion is our Goal&quot;"
                    android:textColor="#Fff"
                    />


                <android.support.v4.view.ViewPager
                    android:id="@+id/viewp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:paddingTop="15dp"></android.support.v4.view.ViewPager>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/ic_demo"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    app:ci_gravity="center_horizontal"
                    app:ci_height="5dp"
                    app:ci_orientation="horizontal"
                    app:ci_width="8dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>
