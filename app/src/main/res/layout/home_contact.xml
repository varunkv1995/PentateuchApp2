<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contact_us"
    android:background="@drawable/contus">


    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textColor="#ecffffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Email: info@pentateuchtechnologies.com
               Phone: 080-23240477,  9591-789-254
                       Fax: +1 (0) 000 0000 002"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/contact_desc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/contact_desc"

        />
</LinearLayout>